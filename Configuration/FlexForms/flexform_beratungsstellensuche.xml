<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>

    <sheets>
        <!--
            ################################
              SHEET General Settings
            ################################
        -->
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:bzga_beratungsstellensuche/Resources/Private/Language/locallang_be.xlf:flexforms_tab.settings
                    </sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <!-- View -->
                    <switchableControllerActions>
                        <TCEforms>
                            <label>LLL:EXT:bzga_beratungsstellensuche/Resources/Private/Language/locallang_be.xlf:flexforms_general.mode
                            </label>
                            <onChange>reload</onChange>
                            <config>
                                <type>select</type>
                                <items>
                                    <numIndex index="1">
                                        <numIndex index="0">LLL:EXT:bzga_beratungsstellensuche/Resources/Private/Language/locallang_be.xlf:flexforms_general.mode.entry_list</numIndex>
                                        <numIndex index="1">Entry->list;Entry->show</numIndex>
                                    </numIndex>
                                    <numIndex index="100">
                                        <numIndex index="0">LLL:EXT:bzga_beratungsstellensuche/Resources/Private/Language/locallang_be.xlf:flexforms_general.mode.entry_show</numIndex>
                                        <numIndex index="1">Entry->show</numIndex>
                                    </numIndex>
                                    <numIndex index="200">
                                        <numIndex index="0">LLL:EXT:bzga_beratungsstellensuche/Resources/Private/Language/locallang_be.xlf:flexforms_general.mode.entry_form</numIndex>
                                        <numIndex index="1">Entry->form</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </switchableControllerActions>

                    <!-- startingpoint -->
                    <settings.startingpoint>
                        <TCEforms>
                            <label>LLL:EXT:lang/locallang_general.xlf:LGL.startingpoint</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>3</size>
                                <maxitems>50</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.startingpoint>

                    <!-- recursive -->
                    <settings.recursive>
                        <TCEforms>
                            <label>LLL:EXT:lang/locallang_general.xlf:LGL.recursive</label>
                            <config>
                                <type>select</type>
                                <items type="array">
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">LLL:EXT:cms/locallang_ttc.xlf:recursive.I.0</numIndex>
                                        <numIndex index="1">0</numIndex>
                                    </numIndex>
                                    <numIndex index="3" type="array">
                                        <numIndex index="0">LLL:EXT:cms/locallang_ttc.xlf:recursive.I.1</numIndex>
                                        <numIndex index="1">1</numIndex>
                                    </numIndex>
                                    <numIndex index="4" type="array">
                                        <numIndex index="0">LLL:EXT:cms/locallang_ttc.xlf:recursive.I.2</numIndex>
                                        <numIndex index="1">2</numIndex>
                                    </numIndex>
                                    <numIndex index="5" type="array">
                                        <numIndex index="0">LLL:EXT:cms/locallang_ttc.xlf:recursive.I.3</numIndex>
                                        <numIndex index="1">3</numIndex>
                                    </numIndex>
                                    <numIndex index="6" type="array">
                                        <numIndex index="0">LLL:EXT:cms/locallang_ttc.xlf:recursive.I.4</numIndex>
                                        <numIndex index="1">4</numIndex>
                                    </numIndex>
                                    <numIndex index="7" type="array">
                                        <numIndex index="0">LLL:EXT:cms/locallang_ttc.xlf:recursive.I.5</numIndex>
                                        <numIndex index="1">250</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.recursive>

                </el>
            </ROOT>
        </sDEF>
        <!--
                    ################################
                      SHEET Additional
                    ################################
                -->
        <additional>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:bzga_beratungsstellensuche/Resources/Private/Language/locallang_be.xlf:flexforms_tab.additional
                    </sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                    <!-- Form Fields -->
                    <settings.formFields>
                        <TCEforms>
                        <label>LLL:EXT:bzga_beratungsstellensuche/Resources/Private/Language/locallang_be.xlf:flexforms_additional.formFields</label>
                        <config>
                            <type>select</type>
                            <itemsProcFunc>BZgA\BzgaBeratungsstellensuche\Hooks\ItemsProcFunc->user_formFields</itemsProcFunc>
                            <items>
                                <numIndex index="0" type="array">
                                    <numIndex index="0">LLL:EXT:bzga_beratungsstellensuche/Resources/Private/Language/locallang_be.xlf:flexforms_additional.formFields.keywords</numIndex>
                                    <numIndex index="1">keywords</numIndex>
                                </numIndex>
                                <numIndex index="10" type="array">
                                    <numIndex index="0">LLL:EXT:bzga_beratungsstellensuche/Resources/Private/Language/locallang_be.xlf:flexforms_additional.formFields.location</numIndex>
                                    <numIndex index="1">location</numIndex>
                                </numIndex>
                                <numIndex index="20" type="array">
                                    <numIndex index="0">LLL:EXT:bzga_beratungsstellensuche/Resources/Private/Language/locallang_be.xlf:flexforms_additional.formFields.kilometers</numIndex>
                                    <numIndex index="1">kilometers</numIndex>
                                </numIndex>
                                <numIndex index="30" type="array">
                                    <numIndex index="0">LLL:EXT:bzga_beratungsstellensuche/Resources/Private/Language/locallang_be.xlf:flexforms_additional.formFields.religion</numIndex>
                                    <numIndex index="1">religion</numIndex>
                                </numIndex>
                                <numIndex index="40" type="array">
                                    <numIndex index="0">LLL:EXT:bzga_beratungsstellensuche/Resources/Private/Language/locallang_be.xlf:flexforms_additional.formFields.categories</numIndex>
                                    <numIndex index="1">categories</numIndex>
                                </numIndex>
                                <numIndex index="50" type="array">
                                    <numIndex index="0">LLL:EXT:bzga_beratungsstellensuche/Resources/Private/Language/locallang_be.xlf:flexforms_additional.formFields.consultingAgreement</numIndex>
                                    <numIndex index="1">consultingAgreement</numIndex>
                                </numIndex>
                                <numIndex index="60" type="array">
                                    <numIndex index="0">LLL:EXT:bzga_beratungsstellensuche/Resources/Private/Language/locallang_be.xlf:flexforms_additional.formFields.pndConsultingAgreement</numIndex>
                                    <numIndex index="1">pndConsultingAgreement</numIndex>
                                </numIndex>
                                <numIndex index="70" type="array">
                                    <numIndex index="0">LLL:EXT:bzga_beratungsstellensuche/Resources/Private/Language/locallang_be.xlf:flexforms_additional.formFields.motherAndChild</numIndex>
                                    <numIndex index="1">motherAndChild</numIndex>
                                </numIndex>
                            </items>
                            <maxitems>99</maxitems>
                            <size>8</size>
                        </config>
                        </TCEforms>
                    </settings.formFields>


                    <!-- PID Single Page -->
                    <settings.singlePid>
                        <TCEforms>
                            <label>LLL:EXT:bzga_beratungsstellensuche/Resources/Private/Language/locallang_be.xlf:flexforms_additional.singlePid</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.singlePid>

                    <!-- PID Single Page -->
                    <settings.listPid>
                        <TCEforms>
                            <label>LLL:EXT:bzga_beratungsstellensuche/Resources/Private/Language/locallang_be.xlf:flexforms_additional.listPid</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.listPid>

                    <!-- PID Back -->
                    <settings.backPid>
                        <TCEforms>
                            <label>LLL:EXT:bzga_beratungsstellensuche/Resources/Private/Language/locallang_be.xlf:flexforms_additional.backPid</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.backPid>

                    <settings.list.itemsPerPage>
                        <TCEforms>
                            <label>LLL:EXT:bzga_beratungsstellensuche/Resources/Private/Language/locallang_be.xlf:flexforms_additional.itemsPerPage</label>
                            <config>
                                <type>input</type>
                                <size>2</size>
                            </config>
                        </TCEforms>
                    </settings.list.itemsPerPage>

                </el>
            </ROOT>
        </additional>

        <!--
            ################################
              SHEET Template
            ################################
        -->
        <template>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:bzga_beratungsstellensuche/Resources/Private/Language/locallang_be.xlf:flexforms_tab.template
                    </sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <!-- Template Layout -->
                    <settings.templateLayout>
                        <TCEforms>
                            <label>LLL:EXT:bzga_beratungsstellensuche/Resources/Private/Language/locallang_be.xlf:flexforms_template.templateLayout</label>
                            <config>
                                <type>select</type>
                                <itemsProcFunc>BZgA\BzgaBeratungsstellensuche\Hooks\ItemsProcFunc->user_templateLayout</itemsProcFunc>
                                <items>
                                    <numIndex index="0" type="array">
                                        <numIndex index="0"></numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.templateLayout>
                </el>
            </ROOT>
        </template>
    </sheets>
</T3DataStructure>